{
  "name": "@signasure/root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint apps/**",
    "test": "turbo run test"
  },
  "devDependencies": {
    "turbo": "^1.x",
    "eslint": "^8.x",
    "prettier": "^3.x",
    "husky": "^8.x",
    "typescript": "^4.x"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
